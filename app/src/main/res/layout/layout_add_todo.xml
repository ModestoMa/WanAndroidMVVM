<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_primary"
    android:paddingBottom="10dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/todoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/bg_transparent"
        android:hint="@string/hint_add_todo_title"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/text_secondary"
        android:textColorHint="@color/text_secondary"
        android:textSize="@dimen/text_content"
        app:layout_constraintEnd_toStartOf="@id/todoSend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/todoSend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/todoDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_transparent"
        android:hint="@string/hint_add_todo_detail"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:textColor="@color/text_secondary"
        android:textColorHint="@color/text_secondary"
        android:textSize="@dimen/text_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todoTitle" />

    <com.google.android.material.chip.Chip
        android:id="@+id/todoDateStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/bg_third"
        android:textColor="@color/text_secondary"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todoDetail"
        tools:text="2020-7-20" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/todoChooseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_calender"
        android:drawablePadding="10dp"
        android:text="@string/text_choose_time"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_content"
        app:layout_constraintStart_toEndOf="@id/todoDateStr"
        app:layout_constraintTop_toBottomOf="@id/todoDetail" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/todoAddDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_list"
        android:drawablePadding="10dp"
        android:text="@string/text_add_detail"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_content"
        app:layout_constraintStart_toEndOf="@id/todoChooseTime"
        app:layout_constraintTop_toTopOf="@id/todoChooseTime" />

</androidx.constraintlayout.widget.ConstraintLayout>