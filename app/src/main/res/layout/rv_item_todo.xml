<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="me.robbin.wanandroid.data.bean.TodoBean" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/bg_second"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_primary">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/todoCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="@{bean.hasDone}"
                android:drawableStart="@drawable/check_todo"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/todoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@{bean.title}"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_todo"
                app:layout_constraintStart_toEndOf="@id/todoCheck"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="这是一条测试Todo" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/todoDetail"
                todoDetail="@{bean.content}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_secondary"
                app:layout_constraintStart_toStartOf="@id/todoTitle"
                app:layout_constraintTop_toBottomOf="@id/todoTitle"
                tools:text="这是一条测试Todo的详细内容" />

            <com.google.android.material.chip.Chip
                android:id="@+id/todoType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_third"
                android:text="@{bean.whatType}"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_content"
                app:layout_constraintStart_toStartOf="@id/todoTitle"
                app:layout_constraintTop_toBottomOf="@id/todoDetail"
                tools:text="任务" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/todoTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@{bean.dateStr}"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_content"
                app:layout_constraintBottom_toBottomOf="@id/todoType"
                app:layout_constraintStart_toEndOf="@id/todoType"
                app:layout_constraintTop_toTopOf="@id/todoType"
                tools:text="2020-7-20" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>