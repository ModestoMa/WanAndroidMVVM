<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="me.robbin.wanandroid.ui.fragment.common.viewmodel.WebViewModel" />

        <variable
            name="click"
            type="me.robbin.wanandroid.ui.fragment.common.view.WebFragment.WebClick" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary">

        <View
            android:id="@+id/statusWeb"
            addStatusPadding="@{true}"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/bg_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <me.robbin.wanandroid.widget.ScrollWebView
            android:id="@+id/webDetail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusWeb" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/bg_main"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/bg_transparent"
                android:onClick="@{() -> click.back()}"
                android:src="@drawable/ic_back" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_web_title"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:imeOptions="actionGo"
                android:lines="1"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:text="@{viewModel.title}"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_content" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableEnd="@drawable/check_collect"
                android:checked="@{viewModel.collected}"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:scaleType="center" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:scaleType="center"
                android:src="@drawable/ic_more" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>